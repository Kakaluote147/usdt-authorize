<body>
<div class="box">
    <h2>USDT / TRC20 授权</h2>

    <label>代币合约地址（USDT）：</label>
    <input id="token" value="TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t">

    <label>授权给谁（spender 地址）：</label>
    <input id="spender" placeholder="输入要授权的钱包或合约地址">

    <label>授权数量（USDT）：</label>
    <input id="amount" placeholder="如：100">

    <button onclick="approve()">确认授权</button>

    <p id="status"></p>
</div>


<script>
    async function approve() {

        // 检查钱包是否注入 tronWeb
        if (!window.tronWeb || !window.tronWeb.ready) {
            document.getElementById("status").innerHTML =
                "请在 TronLink 或 TokenPocket 的 DApp 浏览器中打开此页面！";
            return;
        }

        let token = document.getElementById("token").value;
        let spender = document.getElementById("spender").value;
        let amount = document.getElementById("amount").value;

        if (!spender || !amount) {
            document.getElementById("status").innerHTML = "请填写完整信息！";
            return;
        }

        // ❗正确定义 BigNumber：amount * 1e6（USDT 精度）
        let realAmount = tronWeb.utils.toBigNumber(amount).times(1e6);

        try {
            document.getElementById("status").innerHTML = "提交授权中...";

            // 加载 TRC20 合约
            const contract = await tronWeb.contract().at(token);

            // 执行 approve
            let tx = await contract.approve(spender, realAmount).send({
                feeLimit: 100000000
            });

            document.getElementById("status").innerHTML = "授权成功！<br><br>交易 ID：<br>" + tx;

        } catch (e) {
            document.getElementById("status").innerHTML = "授权失败：<br>" + e;
        }
    }
</script>

</body>
</html>